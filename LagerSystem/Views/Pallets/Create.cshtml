@model LagerSystem.Models.StorageViewModel.PalletItemsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pallet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span asp-validation-for="Pallet.RackPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <form asp-action="AddItem">
            <div class="form-group">
                <label asp-for="Pallet.PalletItems" class="control-label"></label>
                <input asp-for="Pallet.PalletItems" id="item" placeholder="Product Search" class="form-control" />
                <span asp-validation-for="Pallet.PalletItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Item" class="btn btn-primary" />
            </div>
        </form>
    </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/lib/jquery-ui-1.12.1.custom/external/jquery/jquery.js"></script>
        <script src="~/lib/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
        <link href="~/lib/jquery-ui-1.12.1.custom/jquery-ui.css" rel="stylesheet" />
        <script>
            $(document).ready(function () {
                $('#item').autocomplete({
                    source: '/api/item/search'
                });
            });
        </script>
    }
