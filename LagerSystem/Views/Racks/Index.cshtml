@model IEnumerable<LagerSystem.Models.Rack>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card-columns">
    @foreach (var item in Model)
    {
        <a asp-action="Index" asp-controller="Positions" asp-route-id="@item.Id" class="card">
            <div class="card-body">
                <h6 class="card-text">
                    Rack Nr: @Html.DisplayFor(modelItem => item.Id)<br />
                    Total Positions: @item.Positions.Count()<br />
                    Free Positions: @item.Positions.Where(c => c.Available).Count()
                </h6>
            </div>
        </a>
    }
</div>
