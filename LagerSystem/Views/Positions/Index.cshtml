@model IEnumerable<LagerSystem.Models.Position>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="card-columns">
@foreach (var item in Model) {
        <div class="card">
            <div class="card-body">
                <h3 class="card-text">
                    @Html.DisplayFor(modelItem => item.Pallet.Id)
                    @Html.DisplayFor(modelItem => item.RackPosition)
                </h3>
                <h5 class="card-title">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                </h5>
            </div>
        </div>
}
</div>
